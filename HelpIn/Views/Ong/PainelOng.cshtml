@{
    ViewData["Title"] = "Painel ONG";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .card {
        background-color: #ffffff;
        border: 2px solid #ffffff;
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
    }

    .card-icon {
        width: 56px;
        height: 56px;
        margin: 0 auto 1rem;
        fill: #1b6ec2;
        transition: transform 0.3s ease;
    }

    .card:hover .card-icon {
        transform: scale(1.2);
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #1b6ec2;
    }

    .card-desc {
        color: #555;
        font-size: 0.95rem;
    }
</style>

<section class="container px-4 py-10">
    <h1 class="text-3xl font-bold text-center text-primary mb-10">Painel da ONG</h1>

    <div class="card-grid">

        <!-- Gerenciar Vagas -->
        <a href="@Url.Action("Vagas", "Ong")" class="card">
            <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M9 2a2 2 0 00-2 2v1H4a2 2 0 00-2 2v3h20V7a2 2 0 00-2-2h-3V4a2 2 0 00-2-2H9zM2 18a2 2 0 002 2h16a2 2 0 002-2v-7H2v7zm4-5h2v2H6v-2zm3 0h2v2H9v-2zm3 0h2v2h-2v-2z"/>
            </svg>
            <div class="card-title">Gerenciar Vagas</div>
            <div class="card-desc">Crie ou edite oportunidades de voluntariado.</div>
        </a>

        <!-- Editar Perfil -->
        <a href="@Url.Action("EmConstrucao", "Home")" class="card">
            <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 12c2.7 0 4.8-2.1 4.8-4.8S14.7 2.4 12 2.4 7.2 4.5 7.2 7.2 9.3 12 12 12zm0 2.4c-3.2 0-9.6 1.6-9.6 4.8v2.4h19.2V19.2c0-3.2-6.4-4.8-9.6-4.8z"/>
            </svg>
            <div class="card-title">Editar Perfil</div>
            <div class="card-desc">Atualize informações da ONG.</div>
        </a>

        <!-- Voluntários Próximos -->
        <a href="@Url.Action("VoluntariosProximos", "Ong")" class="card">
            <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 2C8.1 2 5 5.1 5 9c0 5.2 7 13 7 13s7-7.8 7-13c0-3.9-3.1-7-7-7zm0 9.5c-1.4 0-2.5-1.1-2.5-2.5S10.6 6.5 12 6.5s2.5 1.1 2.5 2.5S13.4 11.5 12 11.5z"/>
            </svg>
            <div class="card-title">Voluntários Próximos</div>
            <div class="card-desc">Veja voluntários disponíveis na sua região.</div>
        </a>

        <!-- Eventos -->
       <a href="@Url.Action("EmConstrucao", "Home")" class="card">
            <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M7 10h5v5H7zm10-8v2H7V2H5v2H4a2 2 0 00-2 2v14a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2h-1V2h-2zM4 20V8h16v12H4z"/>
            </svg>
            <div class="card-title">Eventos</div>
            <div class="card-desc">Organize e acompanhe seus eventos.</div>
        </a>

        <!-- Mensagens -->
        <a href="@Url.Action("EmConstrucao", "Home")" class="card">
            <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M20 4H4c-1.1 0-2 .9-2 2v14l4-4h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2z"/>
            </svg>
            <div class="card-title">Mensagens</div>
            <div class="card-desc">Veja contatos e mensagens recebidas.</div>
        </a>

        <!-- Relatórios -->
        <a href="@Url.Action("EmConstrucao", "Home")" class="card">
            <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M3 3v18h18V3H3zm8 14H7v-4h4v4zm6 0h-4v-7h4v7zm-6-9H7V7h4v1zm6 0h-4V7h4v1z"/>
            </svg>
            <div class="card-title">Relatórios</div>
            <div class="card-desc">Acompanhe dados e impacto social.</div>
        </a>
    </div>
</section>
