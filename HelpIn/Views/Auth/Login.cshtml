@{
    ViewData["Title"] = "Login";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background-color: #0b1220;
        min-height: 100vh;
        color: #fff;
    }

    .form-control, .form-select {
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        border-radius: 10px;
    }

    .form-control::placeholder {
        color: #888;
    }

    .form-control:focus, .form-select:focus {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: #3b82f6;
        box-shadow: none;
        color: #fff;
    }

    .btn-primary {
        background-color: #3b82f6;
        border: none;
        border-radius: 10px;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #2563eb;
    }

    .divider p {
        color: #ccc;
    }

    .form-label {
        color: #ccc;
    }

    .alert {
        border-radius: 8px;
    }

    .text-body, .link-danger {
        color: #3b82f6;
    }

    .text-body:hover, .link-danger:hover {
        color: #2563eb;
    }

    .form-check-label {
        color: #ccc;
    }

    .footer-login {
        background-color: #3b82f6;
        color: white;
    }

    .footer-login a {
        color: white;
    }

    .footer-login a:hover {
        color: #d1e3ff;
    }
</style>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <!-- Imagem -->
            <div class="col-md-9 col-lg-6 col-xl-5 mb-4 mb-lg-0 text-center">
                <img src="/img/logo.png"
                     class="img-fluid rounded" alt="Imagem Login">
            </div>

            <!-- Formulário -->
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <div class="text-center mb-3">
                    <h2 class="fw-bold">Bem-vindo de volta</h2>
                </div>

                @if (TempData["MensagemErro"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["MensagemErro"]
                    </div>
                }

                @if (TempData["MensagemSucesso"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["MensagemSucesso"]
                    </div>
                }

                <form asp-action="Login" method="post">
                    <!-- Tipo de usuário -->
                    <div class="form-outline mb-3">
                        <label class="form-label">Entrar como</label>
                        <select name="tipoUsuario" class="form-select" required>
                            <option value="">Selecione</option>
                            <option value="Voluntario">Voluntário</option>
                            <option value="Ong">ONG</option>
                        </select>
                    </div>

                    <!-- Email -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="email">E-mail</label>
                        <input type="email" name="email" id="email" class="form-control form-control-lg"
                               placeholder="email@exemplo.com" required />
                    </div>

                    <!-- Senha -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="senha">Senha</label>
                        <input type="password" name="senha" id="senha" class="form-control form-control-lg"
                               placeholder="Sua senha" required />
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input me-2" type="checkbox" value="" id="lembrar" />
                            <label class="form-check-label" for="lembrar">
                                Lembrar de mim
                            </label>
                        </div>
                        <a href="#" class="text-body">Esqueceu a senha?</a>
                    </div>

                    <div class="text-center text-lg-start mt-3">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            Entrar
                        </button>
                        <p class="small fw-bold mt-3 mb-0 text-center">
                            Não tem uma conta?
                            <a href="/Cadastro" class="link-danger">Cadastre-se</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    
</section>
