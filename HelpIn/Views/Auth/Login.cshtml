@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #0b1220;
        min-height: 100vh;
        color: #fff;
    }

    .card-dark {
        background-color: rgba(20, 24, 35, 0.9);
        border-radius: 16px;
        padding: 32px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.6);
    }

    h2 {
        color: #fff;
        font-weight: bold;
    }

    label {
        color: #e0e0e0;
        font-weight: 500;
    }

    .form-control, .select-role {
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        border-radius: 10px;
    }

    .form-control::placeholder {
        color: #888;
    }

    .form-control:focus, .select-role:focus {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: #3b82f6;
        box-shadow: none;
        color: #fff;
    }

    .btn-primary {
        background-color: #3b82f6;
        border: none;
        border-radius: 10px;
        padding: 10px;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #2563eb;
    }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card-dark w-100" style="max-width: 450px;">
        <div class="text-center mb-4">
          
            <h2 class="mt-3">Bem-vindo de volta</h2>
        </div>

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["MensagemErro"]
            </div>
        }

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["MensagemSucesso"]
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label>Entrar como</label>
                <select class="form-control select-role" name="tipoUsuario" required>
                    <option value="">Selecione</option>
                    <option value="Voluntario">Voluntário</option>
                    <option value="Ong">ONG</option>
                </select>
            </div>

            <div class="mb-3">
                <label>E-mail</label>
                <input type="email" name="email" class="form-control" placeholder="email@exemplo.com" required />
            </div>

            <div class="mb-3">
                <label>Senha</label>
                <input type="password" name="senha" class="form-control" placeholder="Sua senha" required />
            </div>

            <div class="d-flex justify-content-end mb-3">
                <a href="#" class="text-decoration-none" style="color: #3b82f6;">Esqueceu a senha?</a>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>

            <div class="text-center">
                <span>Não tem uma conta?</span>
                <a href="/Cadastro" style="color: #3b82f6;">Cadastre-se</a>
            </div>
        </form>
    </div>
</div>
