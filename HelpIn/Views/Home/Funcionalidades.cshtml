@{
    ViewData["Title"] = "Funcionalidades - HelpIn";
}

<!-- AOS -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<script>
    AOS.init();
</script>

<style>
    body {
        background-color: #0D1117;
        color: #FFFFFF;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    h1 {
        text-align: center;
        font-size: 2.6rem;
        font-weight: bold;
        margin-bottom: 40px;
        color: #58A6FF;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
    }

    .feature-box {
        background-color: #1B2233;
        border: 1px solid #2c3140;
        border-radius: 16px;
        padding: 30px 20px;
        text-align: center;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s;
    }

    .feature-box:hover {
        transform: translateY(-6px);
    }

    .feature-icon {
        font-size: 2.5rem;
        color: #58A6FF;
        margin-bottom: 15px;
    }

    .feature-title {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .feature-description {
        color: #C9D1D9;
        font-size: 0.95rem;
        line-height: 1.5;
    }
</style>

<div class="container">
    <h1 data-aos="fade-down">Funcionalidades da HelpIn</h1>

    <div class="features-grid">
        <div class="feature-box" data-aos="zoom-in">
            <div class="feature-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="feature-title">Distância Inteligente</div>
            <div class="feature-description">
                Descubra ONGs e oportunidades próximas a você, com base na sua localização.
            </div>
        </div>

        <div class="feature-box" data-aos="zoom-in" data-aos-delay="100">
            <div class="feature-icon">
                <i class="fas fa-hands-helping"></i>
            </div>
            <div class="feature-title">Vagas para Voluntários</div>
            <div class="feature-description">
                Veja oportunidades abertas, filtre por interesse e encontre onde pode fazer a diferença.
            </div>
        </div>

        <div class="feature-box" data-aos="zoom-in" data-aos-delay="200">
            <div class="feature-icon">
                <i class="fas fa-bullhorn"></i>
            </div>
            <div class="feature-title">Divulgação de Projetos</div>
            <div class="feature-description">
                ONGs podem divulgar ações, eventos e campanhas sociais para atrair voluntários.
            </div>
        </div>

        <div class="feature-box" data-aos="zoom-in" data-aos-delay="300">
            <div class="feature-icon">
                <i class="fas fa-comments"></i>
            </div>
            <div class="feature-title">Contato Facilitado</div>
            <div class="feature-description">
                Entre em contato com ONGs rapidamente via chat ou canais disponíveis na plataforma.
            </div>
        </div>
    </div>
</div>
