@{
    ViewData["Title"] = "Início";
}

<!-- Google Fonts + AOS CSS -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }
    .hero {
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/img/Banner1.png') center/cover no-repeat;
        color: white;
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 60px 20px;
    }
    .feature-icon {
        width: 60px;
        height: 60px;
        margin-bottom: 15px;
    }
    footer a {
        text-decoration: none;
    }
</style>

<!-- Hero Section -->
<section class="hero">
    <div>
        <h1 class="display-4 fw-bold" data-aos="fade-up">Conecte-se com quem faz a diferença</h1>
        <p class="lead" data-aos="fade-up" data-aos-delay="100">Encontre ONGs, apoie causas reais, seja voluntário em minutos.</p>
        <a href="/cadastro" class="btn btn-primary btn-lg mt-4" data-aos="zoom-in" data-aos-delay="200">Começar agora</a>
    </div>
</section>
<!-- Bloco de Estatísticas -->
<section class="stats-banner">
    <div class="stat" data-aos="zoom-in">
        <h3>200+</h3>
        <span>ONGs cadastradas</span>
    </div>
    <div class="stat" data-aos="zoom-in" data-aos-delay="100">
        <h3>800+</h3>
        <span>Voluntários ativos</span>
    </div>
    <div class="stat" data-aos="zoom-in" data-aos-delay="200">
        <h3>1200+</h3>
        <span>Vagas disponíveis</span>
    </div>
</section>




<style>
    .circle-feature {
        width: 220px;
        height: 220px;
        border-radius: 50%;
        border: 3px solid #6c63ff; /* roxo azulado */
        background-color: rgba(255, 255, 255, 0.03);
        color: white;
        text-align: center;
        padding: 30px 15px;
        margin: 0 auto 30px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        transition: transform 0.3s, background-color 0.3s;
    }

    .circle-feature:hover {
        transform: scale(1.05);
        background-color: rgba(255, 255, 255, 0.08);
    }

    .circle-feature span.emoji {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .circle-feature h5 {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 6px;
    }

    .circle-feature p {
        font-size: 0.9rem;
        color: #ccc;
        margin: 0;
    }

 
</style>

<section class="feature-section text-white py-5">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-4 mb-4" data-aos="fade-up">
                <div class="circle-feature">
                    <span class="emoji">🌍</span>
                    <h5>ONGs próximas</h5>
                    <p>Encontre causas reais perto de você.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="circle-feature">
                    <span class="emoji">🤝</span>
                    <h5>Voluntariado fácil</h5>
                    <p>Conecte-se com apenas um clique.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="circle-feature">
                    <span class="emoji">📢</span>
                    <h5>Impacto de verdade</h5>
                    <p>Veja resultados reais da sua ajuda.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Sobre a HelpIn -->
<section class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6" data-aos="fade-right">
            <h2 class="fw-bold text-white">Nossa Missão</h2>
            <p class="text-white">A HelpIn nasceu com o propósito de conectar pessoas dispostas a fazer a diferença com ONGs que precisam de ajuda. Nossa missão é promover o engajamento social através da tecnologia.</p>
        </div>
        <div class="col-md-6 text-center" data-aos="fade-left">
            
            <span style="font-size: 12rem;">🎯</span>
        </div>
    </div>
</section>

<!-- CTA Impacto -->
<section class="py-5 text-white text-center" style="background-image: url('/img/bg-ajuda.jpg'); background-size: cover; background-position: center;">
    <div class="container" data-aos="zoom-in">
        <h2 class="display-5 fw-bold">Junte-se a milhares de pessoas que já fizeram a diferença</h2>
        <a href="/cadastro" class="btn btn-outline-light btn-lg mt-3">Quero ajudar</a>
    </div>
</section>



<!-- AOS JS -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init();
</script>
